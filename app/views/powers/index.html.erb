<%= link_to 'Criar novo Poder', new_power_path, class: 'btn btn-success' %>

<table id="example" class="table table-striped">

  <thead>
    <tr>
      <th>#</th>
      <th>Descrição</th>
      <th>Categoria</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>

    <% @powers.each do |power| %>
      <tr>
        <td><%= power.id %></td>
        <td><%= power.description %></td>
        <td><%= power.category %></td>

        <td>
          <%= link_to edit_power_path(power), class: 'btn btn-primary btn-circle' do %>
            <i class="fa fa-edit"></i>
          <% end %>
        </td>
      </tr>
    <% end %>

  </tbody>

</table>
