<div id="example-basic">
  <div id="smartwizard">

    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link" href="#step-1">
          <div class="num">1</div>
          Dados pessoais
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="#step-2">
          <div class="num">2</div>
          Endereço
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="#step-2">
          <div class="num">3</div>
          Contato e Representante
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="#step-2">
          <div class="num">4</div>
          Dados Bancários
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="#step-2">
          <div class="num">5</div>
          Arquivos
        </a>
      </li>
    </ul>

    <div class="tab-content col-12 col-md-6">
      <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :cnpj %>
        <%= f.text_field :cnpj, class: 'form-control' %>
      </div>

      <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">
        <%= render partial: 'shared/addresses', locals: { f: f }  %>
      </div>

      <div id="step-3" class="tab-pane" role="tabpanel" aria-labelledby="step-3">
        <%= render partial: 'shared/contacts', locals: { f: f }  %>
      </div>

      <div id="step-4" class="tab-pane" role="tabpanel" aria-labelledby="step-4">
        <%= render partial: 'shared/bank_accounts', locals: { f: f }  %>
      </div>

      <div id="step-5" class="tab-pane" role="tabpanel" aria-labelledby="step-5">
        <label>Adicionar arquivos</label>

        <%#= f.file_field :files, multiple: true %>
          <!-- <small class="form-text text-muted">
            Formatos aceitos: JPEG, PNG e PDF.
          </small> -->

        <%# if @profile_customer.errors.any? %>
          <!-- <div id="error_explanation"> -->
            <!-- <ul> -->
              <%# @profile_customer.errors.each do |error| %>
              <!-- <p><%#= error.full_message %></p> -->
              <%# end %>
            <!-- </ul>
          </div> -->
        <%# elsif @profile_customer.files != nil %>
          <%# @profile_customer.files.each do |file| %>
            <!-- <li> -->
              <%#= link_to file.filename, url_for(file) %>
              <%#= link_to ("X"), client_file_upload_path(@profile_customer, file), method: :delete, data: { confirm: "Tem certeza?" }, class:"adj100 btn btn-outline btn-danger btn-remove" %>
            <!-- </li> -->
          <%# end %>
        <%# end %>

        <%= render partial: 'profile_customers/shared/option_fields', locals: { f: f }  %>

        <div class="btns">
          <button type="submit" class="btn btn-success">Salvar</button>
          <%= link_to 'Cancelar', powers_path, class: 'btn btn-outline-danger'%>
        </div>
      </div>

    </div>

  </div>
</div>

<script type="text/javascript">
  $('#smartwizard').smartWizard({
    selected: 0,
    theme: 'arrows',
    justified: false,
    autoAdjustHeight: true,
    backButtonSupport: false,
    enableUrlHash: true,
    transition: {
        animation: 'fade',
        speed: '400',
        easing: '',
        prefixCss: '',
        fwdShowCss: '',
        fwdHideCss: '',
        bckShowCss: '',
        bckHideCss: '',
    },
    toolbar: {
        position: 'bottom',
        showNextButton: true,
        showPreviousButton: true,
        extraHtml: ''
    },
    anchor: {
        enableNavigation: true,
        enableNavigationAlways: false,
        enableDoneState: true,
        markPreviousStepsAsDone: true,
        unDoneOnBackNavigation: false,
        enableDoneStateNavigation: true
    },
    keyboard: {
        keyNavigation: false,
        keyLeft: [37],
        keyRight: [39]
    },
    lang: {
        next: 'Próximo',
        previous: 'Anterior'
    },
    disabledSteps: [],
    errorSteps: [],
    warningSteps: [],
    hiddenSteps: [],
    getContent: null
  });
</script>
