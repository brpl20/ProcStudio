<div id="example-basic">
  <div id="smartwizard">

    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link" href="#step-1">
          <div class="num">1</div>
          Dados pessoais
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="#step-2">
          <div class="num">2</div>
          Contato
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="#step-2">
          <div class="num">3</div>
          Opções
        </a>
      </li>
    </ul>

    <div class="tab-content col-12 col-md-6">
      <div id="step-1" class="tab-pane" role="tabpanel" aria-labelledby="step-1">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :lastname %>
        <%= f.text_field :lastname, class: 'form-control' %>

        <%= f.label :cpf %>
        <%= f.text_field :cpf, class: 'form-control' %>

        <%= f.label :rg %>
        <%= f.text_field :rg, class: 'form-control' %>
      </div>

      <div id="step-2" class="tab-pane" role="tabpanel" aria-labelledby="step-2">
        <%= render partial: 'shared/contacts', locals: { f: f }  %>
      </div>

      <div id="step-3" class="tab-pane" role="tabpanel" aria-labelledby="step-3">
        <%= render partial: 'profile_customers/shared/option_fields', locals: { f: f }  %>

        <div class="btns">
          <button type="submit" class="btn btn-success">Salvar</button>
          <%= link_to 'Cancelar', powers_path, class: 'btn btn-outline-danger'%>
        </div>
      </div>

    </div>

    <div class="progress">
      <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

  </div>
</div>

<script type="text/javascript">
  $('#smartwizard').smartWizard({
    selected: 0,
    theme: 'arrows',
    justified: false,
    autoAdjustHeight: true,
    backButtonSupport: false,
    enableUrlHash: true,
    transition: {
        animation: 'fade',
        speed: '400',
        easing: '',
        prefixCss: '',
        fwdShowCss: '',
        fwdHideCss: '',
        bckShowCss: '',
        bckHideCss: '',
    },
    toolbar: {
        position: 'bottom',
        showNextButton: true,
        showPreviousButton: true,
        extraHtml: ''
    },
    anchor: {
        enableNavigation: true,
        enableNavigationAlways: false,
        enableDoneState: true,
        markPreviousStepsAsDone: true,
        unDoneOnBackNavigation: false,
        enableDoneStateNavigation: true
    },
    keyboard: {
        keyNavigation: false,
        keyLeft: [37],
        keyRight: [39]
    },
    lang: {
        next: 'Próximo',
        previous: 'Anterior'
    },
    disabledSteps: [],
    errorSteps: [],
    warningSteps: [],
    hiddenSteps: [],
    getContent: null
  });
</script>
