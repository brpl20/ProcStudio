{
  "name": "procstudio-test-suite",
  "version": "1.0.0",
  "description": "Comprehensive test suite for ProcStudio API",
  "main": "test_router.js",
  "scripts": {
    "test": "node test_router.js",
    "test:auth": "node auth_only_test.js",
    "test:unit": "node test_router.js unit",
    "test:api": "node test_router.js api",
    "test:api-svelte": "node test_router.js api-svelte",
    "test:e2e": "node test_router.js e2e",
    "test:e2e:user": "cd e2e && npx playwright test tests/user-profile-creation.e2e.js",
    "test:e2e:perf": "node e2e/run-tests.js tests/user-profile-creation.e2e.js",
    "test:all": "node test_router.js all",
    "setup": "npm install && npx playwright install",
    "reports": "node test_router.js reports",
    "test:profile-customers": "npx mocha ./api/ProfileCustomers/tests.js",
    "test:profile-customers:create": "npx mocha ./api/ProfileCustomers/tests.js --create",
    "test:profile-customers:read": "npx mocha ./api/ProfileCustomers/tests.js --read",
    "test:profile-customers:update": "npx mocha ./api/ProfileCustomers/tests.js --update",
    "test:profile-customers:delete-soft": "npx mocha ./api/ProfileCustomers/tests.js --delete-soft",
    "test:profile-customers:delete-hard": "npx mocha ./api/ProfileCustomers/tests.js --delete-hard",
    "test:profile-customers:isolation": "npx mocha ./api/ProfileCustomers/tests.js --isolation"
  },
  "keywords": [
    "testing",
    "api",
    "rails",
    "svelte",
    "e2e"
  ],
  "author": "ProcStudio Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chai": "^4.3.8",
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "newman": "^6.0.0",
    "newman-reporter-htmlextra": "^1.23.1",
    "playwright": "^1.40.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
