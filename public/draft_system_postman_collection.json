            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"draftable_type\": \"ProfileCustomer\",\n  \"draftable_id\": \"123\",\n  \"form_type\": \"profile_form\",\n  \"data\": {\n    \"name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"cpf\": \"123.456.789-00\",\n    \"rg\": \"12.345.678-9\",\n    \"gender\": \"male\",\n    \"civil_status\": \"single\",\n    \"profession\": \"Software Developer\",\n    \"addresses_attributes\": {\n      \"0\": {\n        \"street\": \"Main Street\",\n        \"number\": \"123\",\n        \"neighborhood\": \"Downtown\",\n        \"city\": \"SÃ£o Paulo\",\n        \"state\": \"SP\",\n        \"zip_code\": \"01234-567\"\n      }\n    },\n    \"phones_attributes\": {\n      \"0\": {\n        \"phone_number\": \"+55 11 98765-4321\"\n      }\n    },\n    \"emails_attributes\": {\n      \"0\": {\n        \"email\": \"john.doe@example.com\"\n      }\n    }\n  }\n}"
